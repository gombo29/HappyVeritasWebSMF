</header>
<body style="background-color: #E9EBEE">
<div style="margin-top: 10px">
    <div class="big-thumb-list">
        <ul>
            {% for sc in socialContent %}
                {% set tabid = sc.tab.id %}
                <li>
                    <div class="menu-big-box-html">
                        <div class="cont-thumb"
                             style="position: relative;{% if tabid == 6 %}width: 180px;{% else %}width: 247px;{% endif %}margin-bottom: 15px">
                            {% if sc.isTarget == 1 %}
                            {% if tabid == 6 %}
                            {% if sc.cardId %}
                            <a href="{{ path('mobicom_shop_mobicard_list', {'cardid': sc.cardId}) }}"
                               style="display:block;" class="grayscalewithopacity" target="_blank">
                                {% else %}
                                <a href="{{ path('mobicom_shop_mobicard_list') }}"
                                   style="display:block;" class="grayscalewithopacity" target="_blank">
                                    {% endif %}
                                    {% else %}
                                    <a href="{{ sc.link }}" style="display:block;" class="grayscalewithopacity"
                                       target="_blank">
                                        {% endif %}
                                        {% else %}
                                        <a href="javascript:void(0);" style="display:block;"
                                           class="grayscalewithopacity" data-toggle="modal" data-target="#modal{{ sc.id }}">
                                            {% endif %}
                                            <img src="{{ sc.img|staturl(false) }}"
                                                 class="cont-thumb-img grayscalewithopacity-target"
                                                 style="{% if tabid == 6 %}width: 180px;{% else %}width: 247px;{% endif %}height: auto;border: 1px solid #dee0e3;">
                                            <div class="social-header">
                                                <h2>
                                                    {{ sc.title }}
                                                </h2>
                                            </div>
                                        </a>

                        </div>
                    </div>

                    <div class="modal fade" id="modal{{ sc.id }}" tabindex="-1" role="dialog"
                         aria-labelledby="myModalLabel">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                                aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="myModalLabel">{{ sc.title }}</h4>
                                </div>
                                <div class="modal-body" style="padding: 0 10px 10px 10px">
                                    <div>
                                        <ul class="nav nav-tabs" role="tablist">
                                            <li role="presentation" class="active"><a href="#info{{ sc.id }}"
                                                                                      aria-controls="info{{ sc.id }}"
                                                                                      role="tab" data-toggle="tab">МЭДЭЭЛЭЛ</a>
                                            </li>
                                            <li role="presentation"><a href="#pic{{ sc.id }}"
                                                                       aria-controls="pic{{ sc.id }}" role="tab"
                                                                       data-toggle="tab">ЗУРАГ</a></li>
                                            <li role="presentation"><a href="#video{{ sc.id }}"
                                                                       aria-controls="video{{ sc.id }}" role="tab"
                                                                       data-toggle="tab">ВИДЕО</a></li>
                                        </ul>

                                        <div class="tab-content" style="margin-top: 10px">

                                            <div role="tabpanel" class="tab-pane active" id="info{{ sc.id }}">
                                                {{ sc.body|raw }}
                                            </div>
                                            <div role="tabpanel" class="tab-pane" id="pic{{ sc.id }}">
                                                {% if sc.images != null %}
                                                    <div id="carousel-example-generic{{ sc.id }}" class="carousel slide"
                                                         data-ride="carousel">
                                                        <ol class="carousel-indicators">
                                                            {% set i = 0 %}
                                                            {% for img in sc.images %}
                                                                <li data-target="#carousel-example-generic{{ sc.id }}"
                                                                    data-slide-to="{{ i }}"
                                                                    {% if i == 0 %}class="active"{% endif %}></li>
                                                                {% set i = i +1 %}
                                                            {% endfor %}
                                                        </ol>

                                                        <div class="carousel-inner" role="listbox">
                                                            {% set i = 0 %}
                                                            {% for img in sc.images %}
                                                                <div class="item {% if i==0 %}active{% endif %}">
                                                                    <img src="{{ img.path }}">
                                                                </div>
                                                                {% set i = i +1 %}
                                                            {% endfor %}
                                                        </div>

                                                        <!-- Controls -->
                                                        <a class="left carousel-control" style="background-image: none;"
                                                           href="#carousel-example-generic{{ sc.id }}" role="button"
                                                           data-slide="prev">
                                                            <span class="glyphicon glyphicon-chevron-left"
                                                                  aria-hidden="true" style="color: #ca0813"></span>
                                                            <span class="sr-only">Previous</span>
                                                        </a>
                                                        <a class="right carousel-control"
                                                           style="background-image: none;"
                                                           href="#carousel-example-generic{{ sc.id }}" role="button"
                                                           data-slide="next">
                                                            <span class="glyphicon glyphicon-chevron-right"
                                                                  aria-hidden="true" style="color: #ca0813"> </span>
                                                            <span class="sr-only">Next</span>
                                                        </a>
                                                    </div>
                                                {% else %}
                                                    {% if sc.isEmbed == 1 %}
                                                        {{ sc.embed|raw }}
                                                    {% else %}
                                                        <img src="{{ sc.img }}" style="width: 100%;">
                                                    {% endif %}

                                                {% endif %}
                                            </div>
                                            <div role="tabpanel" class="tab-pane" id="video{{ sc.id }}">
                                                <iframe style="width: 100%;height: 300px;" class="hiiframe"
                                                        src="https://www.youtube.com/embed/{{ sc.video }}?autoplay=false">
                                                </iframe>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <a href="{{ sc.link }}" target="_blank" class="btn btn-primary">Дэлгэрэнгүй</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
<script>

    $("iframe").each(function () {
        $(this).attr('style', 'width: 100% !important;height: 350px !important');
    });
</script>

</body>
</html>