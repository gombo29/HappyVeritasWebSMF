<html>
<header>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="viewport" content="width=device-width, height=device-height"/>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0"/>

    <style type="text/css">
        @font-face {
            font-family: 'Glyphicons Halflings';
            src: url('{{ '/stat/bootstrap-3.2.0-dist/fonts/glyphicons-halflings-regular.eot'|staturl(false) }}');
            src: url(' {{ '/stat/bootstrap-3.2.0-dist/fonts/glyphicons-halflings-regular.eot?#iefix'|staturl(false) }}') format('embedded-opentype'), url('{{ '/stat/bootstrap-3.2.0-dist/fonts/glyphicons-halflings-regular.woff?v1'|staturl(false) }}') format('woff'), url('{{ '/stat/bootstrap-3.2.0-dist/fonts/glyphicons-halflings-regular.ttf?v1'|staturl(false) }}') format('truetype'), url('{{ '/stat/bootstrap-3.2.0-dist/fonts/glyphicons-halflings-regular.svg#glyphicons_halflingsregular'|staturl(false) }}') format('svg')
        }

        @font-face {
            font-family: "OpenSansLight";
            src: url('{{ "/stat/css/fonts/OpenSans-Light.eot"|staturl(false)}}');
            src: url('{{ "/stat/css/fonts/OpenSans-Light.eot?#iefix"|staturl(false)}}') format('embedded-opentype'), url('{{"/stat/css/fonts/OpenSans-Light.woff"|staturl(false)}}') format('woff'), url('{{"/stat/css/fonts/OpenSans-Light.ttf"|staturl(false)}}') format('truetype'), url('{{"/stat/css/fonts/OpenSans-Light.svg"|staturl(false)}}') format('svg');
            font-weight: normal;
            font-style: normal;
        }

        @font-face {
            font-family: "OpenSans";
            src: url('{{"/stat/css/fonts/OpenSans-Regular.eot"|staturl(false)}}');
            src: url('{{"/stat/css/fonts/OpenSans-Regular.eot?#iefix"|staturl(false)}}') format('embedded-opentype'), url('{{"/stat/css/fonts/OpenSans-Regular.woff"|staturl(false)}}') format('woff'), url('{{"/stat/css/fonts/OpenSans-Regular.ttf"|staturl(false)}}') format('truetype'), url('{{"/stat/css/fonts/OpenSans-Regular.svg"|staturl(false)}}') format('svg');
            font-weight: normal;
            font-style: normal;
        }

        @font-face {
            font-family: "Roboto";
            src: url('{{"/stat/css/fonts/Roboto-Regular.ttf"|staturl(false)}}') format('ttf'), url('{{"/stat/css/fonts/Roboto-Regular.woff"|staturl(false)}}') format('woff');
            font-weight: normal;
            font-style: normal;
        }
    </style>
    {% include 'mobicomWebBundle:layout:inc-assets.html.twig' %}
    <style>
        .nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus {
            color: #ca0813;
            cursor: default;
            border: none;
            border-top: 1px solid #ca0813;
            border-bottom: 2px solid #ca0813;
        }

        .nav-tabs > li > a {
            color: rgba(45, 45, 45, 0.89);
            margin-right: 0px;
            line-height: 1.42857143;
            border: none;
            border-radius: 0;
            border-top: 1px solid #a8aeb5;
            border-bottom: 2px solid #a8aeb5;
            background-color: #ffffff;
            padding: 10px 50px;
        }

        .nav > li > a:hover, .nav > li > a:focus {
            text-decoration: none;
            background-color: #ffffff;
            color: #ca0813;
            border-top: 1px solid #ca0813;
            border-bottom: 2px solid #ca0813;
        }

        .big-thumb-list > ul {
            text-align: left;
        }

        .nav-tabs > li {
            width: 33.333333%;
            text-align: center;
        }

        .social-header {
            position: absolute;
            bottom: 30px;
            background-color: #ca0813;
            color: #ffffff;
            padding: 10px 5px;
            width: 101.5%;
        }

        .social-header h2 {
            font-size: 12px;
            color: #ffffff;
            padding: 0;
            margin: 0;
        }

        .product-gallery {
            position: relative;
        }

        .product-gallery-preview {
            background: transparent center center/contain no-repeat;
        }

        .product-gallery-imagelist {
            margin-top: 10px;
            position: absolute;
            width: 100%;
            bottom: 0;
            left: 0;
            text-align: center;
            padding-right: 0px;
            padding-bottom: 10px;
        }

        @media (max-width: 767px) {
            .product-gallery-imagelist {
                position: static;
            }
        }

        .product-gallery > img {
            width: 100%;
            height: auto;
        }

        .product-gallery-item {
            display: inline-block;
            cursor: pointer;
            width: 50px;
            height: 50px;
            border: 1px solid white;
            background: transparent center center/cover no-repeat;
        }

        .product-gallery-item.sel {
            border: 1px solid #cc0000;
        }

        .carousel-indicators li {
            background-color: #ffffff;
            border: 1px solid #ca0813;
        }

        .carousel-indicators .active {
            background-color: #ca0813;
            border: none;
        }
    </style>
